/**
 * Exclusive-or gate:
 * out = (((a == 0) & (b = 1)) | ((a == 1) & (b = 0)), 1, 0)
 */
CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
     Not (in = a, out = Nota);
	Not (in = b, out = Notb);
	
	And (a = a, b = Notb, out = aAndNotb);
	And (a = b, b = Nota, out = bAndNota);
	
	Or (a = aAndNotb, b = bAndNota, out = out);
}